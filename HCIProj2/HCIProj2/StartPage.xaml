<Window x:Class="HCIProj2.StartPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HCIProj2"
        mc:Ignorable="d"
        Title="StartPage" Height="450" Width="800">
    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Content="Grad 1" Height="150" Margin="20 20" FontSize="42" FontWeight="Bold"></Button>
            <Button Grid.Column="1" Content="Grad 2" Margin="20 20" FontSize="42" FontWeight="Bold"></Button>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Content="Grad 3" Height="150" Margin="20 20" FontSize="42" FontWeight="Bold"></Button>
            <Button Grid.Column="1" Content="Grad 4" Margin="20 20" FontSize="42" FontWeight="Bold"></Button>
        </Grid>
    </StackPanel>
    
</Window>
